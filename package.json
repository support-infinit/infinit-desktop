{
  "name": "infinit",
  "version": "2.2.2",
  "description": "A cross-platform application for Salesforce developers, analysts, and release managers operate and collaborate on their next feature, project, or release, all that from within a single platform.",
  "main": "main.js",
  "bin": {
    "infinit": "./cli.js"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac --win",
    "win": "electron-builder --win",
    "mac": "electron-builder --mac",
    "release": "electron-builder --mac --win --publish always",
    "snyk": "snyk test --json > vulnerabilities.json && snyk-to-html -i vulnerabilities.json -o vulnerabilities.html"
  },
  "keywords": [
    "Salesforce",
    "Force.com",
    "Deployment",
    "Comparison",
    "Retrieval"
  ],
  "author": "infinit LLC.",
  "license": "CC-BY-4.0",
  "dependencies": {
    "axios": "^1.7.9",
    "better-sqlite3": "^11.8.1",
    "copy-dir": "^1.3.0",
    "deep-equal": "^2.2.3",
    "diff": "^5.2.0",
    "electron-log": "^5.2.4",
    "electron-updater": "6.3.9",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.1",
    "faye": "^1.4.0",
    "fix-path": "^4.0.0",
    "glob": "^11.0.1",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.3",
    "object-hash": "^3.0.0",
    "piscina": "^4.8.0",
    "shelljs": "^0.8.5",
    "yauzl": "^3.2.0",
    "yazl": "^3.3.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "33.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.daas.infinit",
    "copyright": "Copyright Â© 2024 infinit LLC.",
    "protocols": {
      "name": "infinit",
      "schemes": [
        "infinit"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraFiles": [
      "library/infinit-electron_lib",
      "library/infinit-electron-obs.jar",
      "library/infinit.db",
      {
        "from": "library/jre_${os}_${arch}.zip",
        "to": "library/jre.zip"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/support-infinit/infinit/issues"
  },
  "homepage": "https://infinit.work"
}
